<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Primario"
    android:layout_gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150sp"
        app:tint="@color/Secundario"
        android:src="@drawable/ic_baseline_signal_wifi_off_24"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ups!"
        android:textStyle="bold"
        android:textSize="40sp"
        android:gravity="center"
        android:textColor="@color/Secundario" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No hay internet"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@color/Secundario" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Por favor verifique su conexiÃ³n a internet"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/Secundario" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRetry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:textAllCaps="true"
        android:background="@drawable/button_shape"
        android:text="Intentar nuevamente"
        android:textColor="@color/Primario" />

</LinearLayout>
